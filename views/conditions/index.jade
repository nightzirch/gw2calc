extends ../layout

block content
	script(src="/js/conditions.js")
	link(rel="stylesheet", href="/css/conditions.css")
	
	ol.breadcrumb
		li
			a(href="/") Home
		li.active= title
	
	h1= title
	
	form.form-inline(role="form")
		.form-group
			label(for="level") Level
			select#level.form-control
				- var i = 80
				while i > 0
					option= i--
		.form-group
			label(for="damage") Condition damage
			input#damage.form-control(placeholder="Condition Damage", value="2500", type="number", min="0", max="5000", step="50")
		.form-group
			label(for="stacks") Number of stacks
			input#stacks.form-control(placeholder="Number of Stacks", value="25", type="number", min="1", max="25", step="1")
		.form-group
			label(for="duration") Duration
			.input-group
				input#duration.form-control(placeholder="Duration", value="10", type="number", min="1", max="60", step="1")
				.input-group-addon seconds
	
	table.table
		thead
			tr
				th Conditions
				th Damage per tick
				th Damage per second (DPS)
				th Damage over time (DOT)
		tbody
			tr.bleeding
				td
					a(href="http://wiki.guildwars2.com/wiki/Bleeding")
						img(src="http://wiki.guildwars2.com/images/4/4f/Bleeding_40px.png", alt="Bleeding")
						span Bleeding
				td.tick 0
				td.dps 0
				td.time 0
			tr.burning
				td
					a(href="http://wiki.guildwars2.com/wiki/Burning")
						img(src="http://wiki.guildwars2.com/images/8/8f/Burning_40px.png", alt="Burning")
						span Burning
					small (Does not stack)
				td.tick 0
				td.dps 0
				td.time 0
			tr.confusion
				td
					a(href="http://wiki.guildwars2.com/wiki/Confusion")
						img(src="http://wiki.guildwars2.com/images/1/1d/Confusion_40px.png", alt="Confusion")
						span Confusion
					small (On skill use)
				td.tick 0
				td.dps 0
				td.time 0
			tr.Poison
				td
					a(href="http://wiki.guildwars2.com/wiki/Poison")
						img(src="http://wiki.guildwars2.com/images/b/bc/Poison_40px.png", alt="Poison")
						span Poison
					small (Does not stack)
				td.tick 0
				td.dps 0
				td.time 0
			tr.torment
				td
					a(href="http://wiki.guildwars2.com/wiki/Torment")
						img(src="http://wiki.guildwars2.com/images/b/bb/Torment_40px.png", alt="Torment")
						span Torment
				td.tick 0
				td.dps 0
				td.time 0
			tr.tormentmove
				td
					a(href="http://wiki.guildwars2.com/wiki/Torment")
						img(src="http://wiki.guildwars2.com/images/b/bb/Torment_40px.png", alt="Torment")
						span Bleeding
					small (Moving)
				td.tick 0
				td.dps 0
				td.time 0

	p
		span The Condition Damage Calculator was originally developed by 
		a(href="http://hazno.net") Ren√© Hagen Hage
		span , and later improved by Christian Monzon.
		